{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@realworld/core": ["libs/core/src/index.ts"],
      "@realworld/dto": ["libs/dto/src/index.ts"],
      "@realworld/mongoose": ["libs/db/mongoose/src/index.ts"],
      "@realworld/prisma": ["libs/db/prisma/src/index.ts"],
      "@realworld/prisma/nest": ["libs/db/prisma/src/nest/index.ts"],
      "@realworld/tailwind": ["libs/tailwind/src/index.js"],
      "@realworld/utils": ["libs/utils/src/index.ts"],
      "@realworld/workspace": ["tools/workspace/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
